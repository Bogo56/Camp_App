<% layout("layouts/boilerplate") -%>

    <h1>All Destinations</h1>
    <% for (let dest of destinations) { %>
        <div class="card mb-3" style="width: auto">
            <div class="d-flex flex-row">
                <div class="col-md-4">
                    <div id="Carousel<%= dest._id %>" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <% dest.images.forEach((img,i) => { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>  ">
                            <img src="<%= img.resize %>" class="d-block w-100" alt="beautiful image">
                            </div>
                            <% }) %>
                            <button class="carousel-control-prev" type="button" data-bs-target="#Carousel<%= dest._id %>" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#Carousel<%= dest._id %>" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= dest.title %></h5>
                        <p class="card-text">near <%= dest.location %></p>
                        <a href="/destinations/<%= dest._id %> " class="btn btn-primary">See More</a>
                    </div>
                </div>
            </div>
        </div>
    <% }%>

    <script> 
        const map_key = '<%- process.env.MAPBOX_KEY %>'; 
        const destinations = {"features":<%- JSON.stringify(destinations)%>} 
    </script>

    <script src="/js/clusterMap.js"></script>