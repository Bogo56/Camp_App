<% layout("layouts/boilerplate") -%>
<div class="row">
    <h1 class="text-center"> Register New User</h1>
    <div class="col-6 offset-3">
        <form action="/user/register" method = "POST" class="row g-3 needs-validation" novalidate>
            <div class="mb-3">
                <label for = "username" class="form-label mt-1">Username</label>
                <input class="form-control" id="username" name="username" type='text' value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for = "password" class="form-label mt-1">Password</label>
                <input class="form-control" id="password" name="password" type='text' value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for = "email" class="form-label mt-1">Email</label>
                <input class="form-control" id="email" name="email" type='text' value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success mb-3">Register</button>
        </form>
    </div>
</div>