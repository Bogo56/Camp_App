<% layout("layouts/boilerplate") -%>
    
<div class="row">
    <h1 class="text-center"> Update Campground</h1>
    <div class="col-6 offset-3">
        <form action="/destinations/<%= destination._id %>?_method=PUT" method = "POST" class="row g-3 needs-validation" enctype='multipart/form-data' novalidate>
            <div class="mb-3">
                <label for = "title" class="form-label mt-1">Title</label>
                <input class="form-control" id="title" name="formData[title]" type='text' value="<%=destination.title%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label mt-1">Location</label>
                <input class="form-control" id="location" name="formData[location]" type='text' value="<%=destination.location%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="images" class="form-label mt-1" >Location</label>
                <input class="form-control" id="images" name="images" type='file' multiple>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <label for="price" class="form-label mt-1">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input class="form-control" id="price" name="formData[price]" type='number' value="<%=destination.price%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
                <div class="d-flex flex-wrap justify-content-around flex-row bd-highlight mb-3">
              <% for (let img of destination.images) { %>
                    <img class="mb-3" src="<%= img.thumbnail %>" alt="beautiful">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name ="imgsToDelete" value="<%= img.filename%>" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">Delete ?</label>
                    </div>
              <% }%>
                </div>
            <button class="btn btn-primary mb-3">Update</button>
        </form>
        <a href ="/destinations">Back to All</a>
    </div>
</div>
